{{>partials/header}}

{{#banner}}
<section class="banner" style= "background-image: url('img/{{ background }}')">
{{ title }}
</section>
<h2>{{ title }} disponíveis para adoção!</h2>
{{/banner}}

<div class="container list">

  {{#list}}
    <div class="item">
      <img src="img/{{ image }}" class="item-image" />
      <div class="item-name">{{ name }}</div>
      <div class="item-color">Cor: {{ color }}</div>
      <div class="item-sexo">Sexo: {{ sex }}</div>
    </div> 
  {{/list}} 
</div>

{{^list}}
<div class="container no-list">
<img src="../img/aviso.png">
  <h2>Animal não encontrado!</h2>
</div>
{{/list}}


{{>partials/footer}}
